<header>
  {{!-- <h1>  Protected Dusk</h1> --}}
  <nav class="navbar navbar navbar-static-top">
    <div class="container-fluid">
      <!-- navbar colapse -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
         <span class="sr-only">Toggle navigation</span>
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/" id="brandTitle">Protected Dusk</a>
      </div>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="nav navbar-nav">
          <li><a href="/">News</a></li>
          <li class="disabled"><a href="/mostcommented">Most Commented</a></li>
          <li class="disabled"><a href="/podcasts">Podcasts</a></li>
          <li class="disabled"><a href="/saved" >Saved</a></li>
        </ul>
      </div>
    </div>
  </nav>
</header>
<main>
  <div id="container">
    <div class="row">

      <div class="col-xs-6 col-xs-offset-1">
        <div id="articleContainer">
          <div id="articles">
          <ul>
          {{#each found}}
            <li>
              <div class='media'>
                <div class='media-left'>
                  <img class='media-object' src='{{this.image}}'>
                </div>
                <div class='media-body'>
                  <a href='{{this.link}}'>
                  <h4 class='media-heading'>{{this.title}}</h4>
                  </a>{{this.source}}
                </div>
                <div class='media-right'>
                  <form>
                    <button type='submit' class='btn btn-info noteBtn' data-id='{{this._id}}' href='/{{this._id}}'>
                    <span class='glyphicon glyphicon-comment' aria-hidden='true'></span> Note
                    </button>
                    <button type='submit' class='btn btn-warning disabled' data-id='{{this._id}}' href='/save/{{this._id}}'>
                    <span class='glyphicon glyphicon-pushpin' aria-hidden='true'></span> Save
                    </button>
                  </form>
                </div>
              </div>
            </li>
          {{/each}}
          </ul>
          </div>
        </div>
      </div>

      <div class="col-xs-4">
        <form id="noteForm">
          <div class="form-group">
            <label for="noteBody">Leave a Note</label>
            <textarea id="noteBody" class="form-control" rows="4"></textarea>
          </div>
          <button id="submitNote" type="submit" class="btn btn-info" data-id="584dab027dbc902e7c264fa6">Submit</button>
        </form>
        <div id="notesContainer">
          <ul id="notesUL">
          </ul>
        </div>
      </div>

    </div>
  </div>
</main>


